{
  "name": "maxmobility",
  "version": "0.1.0",
  "repository": "https://github.com/Max-Mobility/permobil-wear",
  "scripts": {
    "precommit": "lint-staged",
    "tslint": "tslint -p tsconfig.json -c tslint.json",
    "ns.setup": "npm uninstall -g nativescript && npm install -g nativescript",
    "nuke": "npm run clean.all",
    "nuki": "npm run nuke && npm run setup",
    "setup": "npm run nuke && npm i && npm run setup.ns.accelerometer && npm run setup.ns.bluetooth && npm run setup.libs && npm run setup.smartdrive.app",
    "setup.ns.accelerometer": "cd nativescript-accelerometer && npm i && tsc",
    "setup.ns.bluetooth": "cd nativescript-bluetooth && npm i && tsc",
    "setup.smartdrive.app": "cd apps/smartdrive-app && npm i",
    "setup.libs": "cd libs/core && npm i",
    "// CLEAN SECTION": "----------------------  CLEAN SECTION  -------------------------------",
    "clean": "rimraf platforms hooks node_modules package-lock.json",
    "clean.all": "npm run clean && npm run clean.libs && npm run clean.ns.accelerometer && npm run clean.ns.bluetooth && npm run clean.smartdrive",
    "clean.libs": "cd libs/core && rimraf node_modules",
    "clean.ns.accelerometer": "cd nativescript-accelerometer && rimraf node_modules",
    "clean.ns.bluetooth": "cd nativescript-bluetooth && rimraf hooks node_modules",
    "clean.smartdrive": "cd apps/smartdrive-app && rimraf hooks node_modules platforms package-lock.json",
    "// end CLEAN SECTION": "----------------------  CLEAN SECTION  -------------------------------",
    "// SmartDrive.App.Section": "--------------------   SmartDrive.App   -----------------------------",
    "smartdrive.clean": "npm run clean.smartdrive",
    "smartdrive.setup": "npm run setup.smartdrive.app",
    "smartdrive.start.android": "cd apps/smartdrive-app && tsc && tns run android --bundle",
    "smartdrive.start.android.hmr": "cd apps/smartdrive-app && tsc && tns run android --bundle  --hmr",
    "smartdrive.start.android.report": "cd apps/smartdrive-app && tsc && tns run android --bundle  --env.report",
    "smartdrive.android.release": "node ./apps/smartdrive-app/tools/android-release.js",
    "smartdrive.android.layouts": "adb shell dumpsys gfxinfo com.permobil.smartdrive.wearos > layout-profile.txt",
    "smartdrive.android.framestats": "adb shell dumpsys gfxinfo com.permobil.smartdrive.wearos framestats > framestats.txt",
    "// end SmartDrive.App.Section": "--------------------   SmartDrive.App   -----------------------------"
  },
  "private": true,
  "dependencies": {
    "buffer": "~5.2.0",
    "injection-js": "~2.2.1",
    "kinvey-nativescript-sdk": "~3.12.4",
    "nativescript-accelerometer-advanced": "file:./nativescript-accelerometer",
    "nativescript-bluetooth": "file:./nativescript-bluetooth",
    "nativescript-geolocation": "~4.5.0",
    "nativescript-gif": "~4.0.2",
    "nativescript-lottie": "~3.0.2",
    "nativescript-permissions": "~1.2.3",
    "nativescript-sentry": "~1.8.0",
    "nativescript-theme-core": "~1.0.4",
    "nativescript-toasty": "~1.3.0",
    "nativescript-ui-chart": "~3.11.1",
    "nativescript-wear-os": "~0.2.1",
    "reflect-metadata": "~0.1.13",
    "smart-eval-kinvey": "git+https://github.com/autochair/SmartEvalKinvey.git#master",
    "tns-core-modules": "~5.2.2"
  },
  "devDependencies": {
    "appium": "1.11.1",
    "codelyzer": "~4.2.1",
    "jasmine-core": "~3.3.0",
    "jasmine-marbles": "0.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~3.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "~1.4.0",
    "nativescript-worker-loader": "~0.9.5",
    "node-fetch": "~2.0.0",
    "node-sass": "^4.11.0",
    "prettier": "^1.16.4",
    "protractor": "~5.3.0",
    "husky": "^1.3.1",
    "prompt": "^1.0.0",
    "lint-staged": "^8.1.5",
    "tns-platform-declarations": "~5.2.2",
    "ts-node": "~7.0.0",
    "tslint": "~5.14.0",
    "typescript": "~3.1.6"
  },
  "lint-staged": {
    "*.{ts, js, json, css, scss, md, xml, html}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true
  }
}
