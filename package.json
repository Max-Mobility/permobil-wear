{
  "name": "maxmobility",
  "version": "0.1.0",
  "repository": "https://github.com/Max-Mobility/permobil-wear",
  "scripts": {
    "precommit": "lint-staged",
    "tslint": "tslint -p tsconfig.json -c tslint.json",
    "ns.setup": "npm uninstall -g nativescript && npm install -g nativescript",
    "nuke": "npm run clean.all",
    "nuki": "npm run nuke && npm run setup",
    "global.installs": "npm i -g rimraf && npm i -g typescript",
    "setup": "npm run global.installs && npm run setup.nonglobal",
    "setup.nonglobal": "npm run nuke && npm i && npm run setup.ns.bluetooth && npm run setup.ns.animated-circle && npm run setup.libs && npm run setup.smartdrive.app",
    "setup.ns.bluetooth": "cd forked-plugins/nativescript-bluetooth && npm i && tsc",
    "setup.ns.animated-circle": "cd forked-plugins/nativescript-animated-circle && npm i && tsc",
    "setup.smartdrive.app": "cd apps/smartdrive-app && npm i && tsc",
    "setup.libs": "cd libs/core && npm i && tsc",
    "// CLEAN SECTION": "----------------------  CLEAN SECTION  -------------------------------",
    "clean": "rimraf platforms hooks node_modules package-lock.json",
    "clean.all": "npm run clean && npm run clean.libs && npm run clean.ns.bluetooth && npm run clean.ns.animated-circle && npm run clean.smartdrive",
    "clean.libs": "cd libs/core && rimraf node_modules",
    "clean.ns.bluetooth": "cd forked-plugins/nativescript-bluetooth && rimraf hooks node_modules",
    "clean.ns.animated-circle": "cd forked-plugins/nativescript-animated-circle && rimraf hooks node_modules",
    "clean.smartdrive": "cd apps/smartdrive-app && rimraf hooks node_modules platforms package-lock.json",
    "// end CLEAN SECTION": "----------------------  CLEAN SECTION  -------------------------------",
    "// SmartDrive.App.Section": "--------------------   SmartDrive.App   -----------------------------",
    "smartdrive.clean": "npm run clean.smartdrive",
    "smartdrive.setup": "npm run setup.smartdrive.app",
    "sd.brad": "cd apps/smartdrive-app && tsc && tns run android --device 8606X91120272",
    "smartdrive.start.android": "cd apps/smartdrive-app && tsc && tns run android",
    "smartdrive.start.android.report": "cd apps/smartdrive-app && tsc && tns run android --bundle  --env.report",
    "smartdrive.android.release": "node ./apps/smartdrive-app/tools/android-release.js",
    "smartdrive.android.layouts": "adb shell dumpsys gfxinfo com.permobil.smartdrive.wearos > layout-profile.txt",
    "smartdrive.android.framestats": "adb shell dumpsys gfxinfo com.permobil.smartdrive.wearos framestats > framestats.txt",
    "// end SmartDrive.App.Section": "--------------------   SmartDrive.App   -----------------------------"
  },
  "private": true,
  "dependencies": {
    "buffer": "~5.2.0",
    "date-fns": "~1.30.1",
    "injection-js": "~2.2.1",
    "kinvey-nativescript-sdk": "~3.12.4",
    "lodash": "~4.17.11",
    "nativescript-android-sensors": "~1.4.2",
    "nativescript-gif": "~4.0.2",
    "nativescript-insomnia": "^1.2.2",
    "nativescript-localstorage": "~2.0.0",
    "nativescript-lottie": "~3.0.2",
    "nativescript-ng-ripple": "~3.0.0-beta.1",
    "nativescript-pager": "~9.5.4",
    "nativescript-permissions": "~1.3.6",
    "nativescript-sentry": "~1.9.1",
    "nativescript-sqlite": "~2.3.3",
    "nativescript-sqlite-commercial": "github:autochair/nativescript-sqlite-commercial",
    "nativescript-sqlite-encrypted": "github:autochair/nativescript-sqlite-encrypted",
    "nativescript-theme-core": "~1.0.6",
    "nativescript-themes": "~2.0.1",
    "nativescript-toasty": "~1.3.1",
    "nativescript-vibrate": "~2.1.3",
    "nativescript-wear-os": "~1.0.0",
    "reflect-metadata": "~0.1.13",
    "smart-eval-kinvey": "git+https://github.com/autochair/SmartEvalKinvey.git#master",
    "tns-core-modules": "~5.4.2"
  },
  "devDependencies": {
    "appium": "1.11.1",
    "jasmine-core": "~3.3.0",
    "jasmine-marbles": "0.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~3.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "~1.4.0",
    "node-fetch": "~2.0.0",
    "node-sass": "^4.12.0",
    "prettier": "^1.18.1",
    "protractor": "~5.3.0",
    "husky": "^2.4.0",
    "prompt": "^1.0.0",
    "lint-staged": "^8.2.0",
    "tns-platform-declarations": "~5.4.2",
    "ts-node": "~7.0.0",
    "tslint": "~5.17.0",
    "typescript": "~3.4.5"
  },
  "lint-staged": {
    "*.{ts, js, json, css, scss, md, xml, html}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true
  }
}
