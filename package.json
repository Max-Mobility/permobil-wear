{
  "nativescript": {
    "id": "com.permobil.watch"
  },
  "main": "app.js",
  "description": "NativeScript Application",
  "license": "SEE LICENSE IN <your-license-filename>",
  "repository": "https://github.com/Max-Mobility/permobil-wear",
  "scripts": {
    "start.android": "tns run android",
    "start.ios": "tns run ios",
    "debug-on-wifi": "adb tcpip 5555 && adb connect 192.168.1.65",
    "build-bluetooth": "cd nativescript-bluetooth && npm i --only=dev && tsc && rimraf *.tgz && npm pack",
    "build-accelerometer": "cd nativescript-accelerometer && npm i --only=dev && tsc && rimraf *.tgz && npm pack",
    "nuke": "rimraf platforms hooks node_modules package-lock.json",
    "nuki": "npm run nuke && npm run setup",
    "setup": "npm i -g rimraf && rimraf *.lock && npm i --only=dev && npm run build-bluetooth && npm run build-accelerometer"
  },
  "dependencies": {
    "buffer": "~5.2.0",
    "injection-js": "~2.2.1",
    "kinvey-nativescript-sdk": "~3.12.4",
    "nativescript-accelerometer-advanced": "file:./nativescript-accelerometer/nativescript-accelerometer-advanced-3.0.0.tgz",
    "nativescript-bluetooth": "file:./nativescript-bluetooth/nativescript-bluetooth-1.3.0.tgz",
    "nativescript-carousel": "~4.1.0",
    "nativescript-geolocation": "~4.3.1",
    "nativescript-gif": "~4.0.2",
    "nativescript-lottie": "~3.0.2",
    "nativescript-permissions": "~1.2.3",
    "nativescript-sentry": "~1.8.0",
    "nativescript-theme-core": "~1.0.4",
    "nativescript-toasty": "~1.2.0",
    "nativescript-ui-chart": "~3.11.1",
    "nativescript-wear-os": "~0.1.4",
    "reflect-metadata": "~0.1.13",
    "smart-eval-kinvey": "git+https://github.com/autochair/SmartEvalKinvey.git#master",
    "tns-core-modules": "~5.2.2"
  },
  "devDependencies": {
    "husky": "~1.3.1",
    "lint-staged": "~8.1.5",
    "mkdirp": "~0.5.1",
    "nativescript-dev-typescript": "~0.8.0",
    "nativescript-dev-webpack": "~0.20.2",
    "nativescript-hook": "~0.2.5",
    "prettier": "~1.16.4",
    "prompt": "~1.0.0",
    "rimraf": "~2.6.3",
    "tns-platform-declarations": "~5.2.2",
    "tslint": "~5.13.1",
    "typescript": "~3.1.6"
  },
  "lint-staged": {
    "*.{ts, js, json, css, scss, md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "semi": true
  }
}
