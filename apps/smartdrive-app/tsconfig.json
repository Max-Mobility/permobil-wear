{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": false,
        "skipLibCheck": true,
        "removeComments": true,
        "noImplicitUseStrict": true,
        "declaration": false,
        "lib": [
            "es6",
            "dom"
        ],
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "app/*"
            ],
            "@permobil/*": [
                "../../libs/*"
            ],
            "*": [
                "./node_modules/tns-core-modules/*",
                "./node_modules/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "platforms",
        "nativescript-bluetooth",
        "forked-plugins/nativescript-bluetooth",
        "forked-plugins/nativescript-animated-circle",
        "tools",
        "hooks"
    ]
}