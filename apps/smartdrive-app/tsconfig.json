{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": false,
        "skipLibCheck": true,
        "removeComments": true,
        "noImplicitUseStrict": true,
        "declaration": false,
        "lib": [
            "es6",
            "dom",
            "es2015.iterable"
        ],
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "app/*"
            ],
            "@permobil/*": [
                "../../libs/*"
            ],
            "*": [
                "./node_modules/tns-core-modules/*",
                "./node_modules/*"
            ]
        }
    },
    "include": [
        "./node_modules/tns-platform-declarations/android.d.ts",
        "./node_modules/tns-platform-declarations/ios.d.ts",
        "./app/typings/wear.d.ts",
        "./app/typings/wearable-support.2.4.0.d.ts",
        "./references.d.ts",
        "./app/main-activity.ts",
        "./app/app.ts",
        "./app/**/.ts"
    ],
    "exclude": [
        "node_modules",
        "platforms",
        "nativescript-bluetooth",
        "nativescript-accelerometer"
    ]
}