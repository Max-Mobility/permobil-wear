<Page xmlns="http://schemas.nativescript.org/tns.xsd" 
  xmlns:Lottie="nativescript-lottie" 
  xmlns:wol="nativescript-wear-os/packages/wear-os-layout" 
  xmlns:lv="nativescript-wear-os/packages/listview" 
  xmlns:pager="nativescript-pager" 
  xmlns:sdl="nativescript-wear-os/packages/swipe-dismiss-layout" navigatingTo="navigatingTo" actionBarHidden="true">
  <GridLayout rows="*, *" columns="*">

    <pager:Pager orientation="vertical" height="100%" width="100%" col="0" row="0" rowSpan="2" id="pager" spacing="2%" peaking="10%" transformer="none" pagesCount="10" showNativePageIndicator="false">
      // Activate Power Assist Screen
      <pager:PagerItem>
        <wol:WearOsLayout height="100%" width="100%">
          <GridLayout rows="*, *" columns="*">
            <Button text="ACTIVATE POWER ASSIST" tap="{{ activatePowerAssistTap }}" />
          </GridLayout>
        </wol:WearOsLayout>

      </pager:PagerItem>
      
      // SmartDrive Battery Usage Chat
      <pager:PagerItem>
        <wol:WearOsLayout height="100%" width="100%">
          <GridLayout height="100%" rows="auto, auto, *" columns="*, auto">
            <Label row="0" colSpan="8" text="Daily SmartDrive Battery Usage" class="text-center chart-title h3" textWrap="true" />
            <Label text="" row="1" col="0" class="hr-blue" textWrap="true" />
            <Label text="100" row="1" col="1" textWrap="false" />
            // Bars
            <GridLayout row="2" colSpan="8" rows="*, auto" height="100" columns="*,*,*,*,*,*,*">
              // Bar Lines (need to make height dynamic, possibly use repeater to databind to a local array with battery data)
              <Label row="0" col="0" class="battery-line" height="50" textWrap="true" />
              <Label row="0" col="1" class="battery-line" height="33" textWrap="true" />
              <Label row="0" col="2" class="battery-line" height="58" textWrap="true" />
              <Label row="0" col="3" class="battery-line" height="12" textWrap="true" />
              <Label row="0" col="4" class="battery-line" height="78" textWrap="true" />
              <Label row="0" col="5" class="battery-line" height="93" textWrap="true" />
              <Label row="0" col="6" class="battery-line" height="5" textWrap="true" />
               // Bar Titles (need to make text part of the repeater layout to databind it to the local battery data)
              <Label row="1" col="0" text="T" class="line-label" />
              <Label row="1" col="1" text="W" class="line-label" />
              <Label row="1" col="2" text="Th" class="line-label" />
              <Label row="1" col="3" text="F" class="line-label" />
              <Label row="1" col="4" text="S" class="line-label" />
              <Label row="1" col="5" text="Su" class="line-label" />
              <Label row="1" col="6" text="M" class="line-label" />

            </GridLayout>

          </GridLayout>

        </wol:WearOsLayout>
      </pager:PagerItem>

      // SmartDrive Distance Traveled Chart
      <pager:PagerItem>
        <wol:WearOsLayout height="100%" width="100%">
          <GridLayout height="100%" rows="auto, auto, *" columns="*, auto">
            // Chart Title
            <Label row="0" colSpan="8" text="Daily SmartDrive Distance Traveled (MI)" class="text-center chart-title h3" textWrap="true" />
            <Label text="" row="1" col="0" class="hr-blue" textWrap="true" />
            // max value of the bar chart
            <Label text="12" row="1" col="1" textWrap="false" />
            // Bars
            <GridLayout row="2" colSpan="8" rows="*, auto" height="90" columns="*,*,*,*,*,*,*">
              // Bar Lines (need to make height dynamic, possibly use repeater to databind to a local array with battery data)
              <Label row="0" col="0" class="distance-line" height="20" textWrap="true" />
              <Label row="0" col="1" class="distance-line" height="70" textWrap="true" />
              <Label row="0" col="2" class="distance-line" height="10" textWrap="true" />
              <Label row="0" col="3" class="distance-line" height="85" textWrap="true" />
              <Label row="0" col="4" class="distance-line" height="4" textWrap="true" />
              <Label row="0" col="5" class="distance-line" height="74" textWrap="true" />
              <Label row="0" col="6" class="distance-line" height="53" textWrap="true" />
               // Bar Titles (need to make text part of the repeater layout to databind it to the local battery data)
              <Label row="1" col="0" text="T" class="line-label" />
              <Label row="1" col="1" text="W" class="line-label" />
              <Label row="1" col="2" text="Th" class="line-label" />
              <Label row="1" col="3" text="F" class="line-label" />
              <Label row="1" col="4" text="S" class="line-label" />
              <Label row="1" col="5" text="Su" class="line-label" />
              <Label row="1" col="6" text="M" class="line-label" />

            </GridLayout>

          </GridLayout>

        </wol:WearOsLayout>


      </pager:PagerItem>
    </pager:Pager>

    // Main Home Page Layout
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        <!-- <lv:WearOsListView loaded="{{ onMainLayoutLoaded }}" useScalingScroll="true" class="permobil-hero" height="100%" width="100%" row="0" rowSpan="2" col="0" items="{{ items }}" itemTemplateSelector="type">
      <lv:WearOsListView.itemTemplates>
        <template key="banner">
          <StackLayout>
            <Image src="{{ image }}" class="{{ class }}" stretch="aspectFit" />
          </StackLayout>
        </template>
        <template key="button">
          <GridLayout rows="*" columns="auto, *" tap="{{ func }}">
            <Image src="{{ image }}" class="{{ class }}" stretch="aspectFit" row="0" col="0" />
            <Label text="{{ text }}" class="label" textWrap="true" row="0" col="1" />
          </GridLayout>
        </template>
      </lv:WearOsListView.itemTemplates>
    </lv:WearOsListView> -->

    // Settings Layout "Page"
    <sdl:SwipeDismissLayout row="0" rowSpan="2" col="0" loaded="{{ onSettingsLayoutLoaded }}" class="page" translateX="500" visibility="{{ isSettingsLayoutEnabled ? 'visible' : 'collapsed' }}">
      <wol:WearOsLayout>
        <Label text="SmartDrive Settings" color="white" fontSize="25" textWrap="true" />
        <Label text="{{ tapSensitivityText }}" color="white" fontSize="15" textWrap="true" />
        <StackLayout orientation="horizontal">
          <Button width="50%" text="-" tap="{{ onDecreaseTapSensitivityTap }}" fontSize="10"/>
          <Button width="50%" text="+" tap="{{ onIncreaseTapSensitivityTap }}" fontSize="10"/>
        </StackLayout>
        <Button text="Speech Test" tap="{{ onVoiceInputTap }}" class="btn btn-primary" />
      </wol:WearOsLayout>
    </sdl:SwipeDismissLayout>

  </GridLayout>

</Page>
