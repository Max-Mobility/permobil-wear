{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom", "webworker"],
    "baseUrl": ".",
    "paths": {
      "@permobil/*": ["libs/*"]
    }
  },
  "include": ["libs"],
  "exclude": ["apps/smartdrive-app", "node_modules", "tmp"]
}
