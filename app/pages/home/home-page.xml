
<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" actionBarHidden="true" class="permobil-page">

    <ScrollView>
        <FlexboxLayout flexDirection="column" justifyContent="space-between">
            <FlexboxLayout flexDirection="row" justifyContent="center">
                <Image src="~/assets/images/permobil.png" margin="10" stretch="none" />
            </FlexboxLayout>
            <FlexboxLayout flexDirection="column">
                <FlexboxLayout flexDirection="row" justifyContent="center">
                    <Label text="This is working." class="label title"></Label>
                </FlexboxLayout>
                <FlexboxLayout flexDirection="row" justifyContent="center">
                    <Button text="Accelerometer" tap="{{ startAccelerometer }}" class="btn" />
                    <Label text="{{ accelerometer }}" class="label" textWrap="true" />
                </FlexboxLayout>
                <FlexboxLayout flexDirection="row" justifyContent="center">
                    <Button text="Heart Rate" tap="{{ getHeartRateData }}" class="btn" />
                    <Label text="{{ heartRate }}" class="label" textWrap="true" />
                </FlexboxLayout>
                <FlexboxLayout flexDirection="row" justifyContent="center">
                    <Button text="Alert" tap="{{ onAlertTap }}" class="btn" />
                </FlexboxLayout>
            </FlexboxLayout>
            <FlexboxLayout flexDirection="row" justifyContent="center">
                <!-- <Label text="Prev" class="label" textWrap="true" /> -->
            </FlexboxLayout>
        </FlexboxLayout>
    </ScrollView>


</Page>